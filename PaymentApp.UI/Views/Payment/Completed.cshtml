
@{
    ViewData["Title"] = "Completed";
    Layout = "~/Views/Shared/_Blanks.cshtml";


    var name = TempData["Name"] ?? "";
    var amount = TempData["Total"] ?? "$ 0.00";
}


<div class="container-fluid">


    <div class="col-md-6 col-md-offset-3" style="margin-top:10%;">

        <h1 class="text-center">Thank you @name!</h1>
        <hr />

        <div class="row">

            <h3 class="text-center">
                @amount was successfully deducted from your account.
            </h3>

        </div>
    </div>
</div>